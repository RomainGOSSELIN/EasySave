<Window x:Class="EasySaveWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="600" Width="920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#2d2c4d">
            <Image Source="Images/logoES.png" Width="130" Height="70"/>
            <Button Content="Backup" Margin="10"/>
            <Button Content="Settings" Margin="10"/>
        </StackPanel>

        <Grid Grid.Column="1" Background="#0d0c27">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Content="+ Add Backup" HorizontalAlignment="Right" Width="100" Margin="10"/>
            <Button Content="Run all" HorizontalAlignment="Left" Width="100" Margin="408,10,0,10"/>


            <ListView Grid.Row="1">
                <ListView Grid.Row="1">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Type" Width="120"/>
                            <GridViewColumn Header="Job Name" Width="120"/>
                            <GridViewColumn Header="Source" Width="120"/>
                            <GridViewColumn Header="Destination" Width="120"/>
                            <GridViewColumn Header="Actions" Width="120"/>
                            <!-- Add your ListView items here -->

                        </GridView>
                    </ListView.View>
                </ListView>
            </ListView>

            <StackPanel Grid.Row="2">
                <TextBlock Text="Running Backup :" FontWeight="Bold"/>
                <TextBlock Text="CopiedFilePath" />
                <TextBlock Text="50%" HorizontalAlignment="Right"/>
                <ProgressBar Value="50" Maximum="100" Height="20"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
